.post
  .user-icon
    = link_to user_path(post.user) do
      - if post.user.image.present?
        = image_tag post.user.image.url
      - else
        .no-image
          no image
  .content
    .content-top
      .user-name
        = link_to user_path(post.user) do
          = post.user.name
      .post-content
        = post.post
        .post-content__image
          - post.images.each do |image|
            -if image.image_url.present?
              = link_to image.image_url.url ,'data-lightbox':image ,:rel => "lightbox" do
                = image_tag image.image_url.url ,class:'popup-image'
      .post-time
        = post.created_at.to_s(:datetime)
    .content-bottom
      .favorite-wrapper
        .favorite-btn
        - if post.favorited_by? current_user
          = link_to  post_favorites_path(post), method: :delete do
            = icon 'fa', 'heart' ,class: 'fav-remove'
        - else
          = link_to  post_favorites_path(post), method: :post do
            = icon 'fa', 'heart' ,class: 'fav-add'

        -if post.favorites.count != 0
          .favorite-count
          = post.favorites.count

      .destoroy-follow-wrapper
        - if user_signed_in? && current_user.id == post.user_id
          .destroy-btn
            = link_to "削除" ,"/posts/#{post.id}", method: :delete 
        - else
          .follow-btn
            - if post.user.followed_by? current_user
              = link_to "フォロー中", user_follows_path(post.user), method: :delete
            - else
              = link_to "フォローする", user_follows_path(post.user), method: :post

