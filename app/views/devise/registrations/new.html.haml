.user-edit-wrapper
  .edit-form
    %h1 新規登録
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource
      .field.edit-form__name
        = f.label :name,class:'name-label'
        = f.text_field :name, autofocus: true, autocomplete: "name",class:'name-form'
      .field.edit-form__email
        = f.label :email,class:'email-label'
        = f.email_field :email, autofocus: true, autocomplete: "email",class:'email-form'
      .field.edit-form__password
        = f.label :password,class:'password-label'
        = f.password_field :password, autocomplete: "new-password",class:'password-form'
      .field.edit-form__password
        = f.label :password_confirmation,class:'password-label'
        = f.password_field :password_confirmation, autocomplete: "new-password",class:'password-form'
      - if @minimum_password_length
        %em
          ※#{@minimum_password_length}文字以上

      .actions
        = f.submit "登録する" ,class:'submit-btn'
    = render "devise/shared/links"
