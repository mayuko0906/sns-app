.wrapper
  .main-content
    = render 'layouts/notifications'
    .info-header
      - if current_user.id == @user.id
        .self-info
          あなたのフォロワー
        .self-activity#self-activity
          = render partial: 'user-status', locals: { user: @user }
      -else
        .another-info
          .another-info__header
            #{@user.name}さんのフォロワー
          = render partial: 'user-status', locals: { user: @user }

    - if @user.followers.empty?
      %p
        フォロワーがいません
    - else
      .users
        = render partial: 'user', collection: @user.followers

  = render "posts/side_bar"
